<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hom.ourhome.macaddresschange.Fab0Fragment"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab0"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_144x144" />

    <TextView
        android:id="@+id/fab0Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fab0text"
        app:layout_constraintLeft_toLeftOf="@+id/fab0"
        app:layout_constraintRight_toRightOf="@+id/fab0"
        app:layout_constraintTop_toBottomOf="@+id/fab0" />
</android.support.constraint.ConstraintLayout>